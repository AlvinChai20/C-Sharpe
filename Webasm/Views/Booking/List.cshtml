@model IEnumerable<UserApp.Models.Appointments>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-primary">My Bookings</h2>

            <!-- ✅ Success message goes here -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="mb-3 text-center">
                <label for="statusFilter" class="form-label fw-semibold me-2">
                    Filter by Status:
                </label>
                <select id="statusFilter" class="form-select d-inline-block w-auto shadow-sm">
                    <option value="">All</option>
                    <option value="Booked">Booked</option>
                    <option value="Pending">Pending</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>

            <div class="table-responsive">
                <table id="bookingsTable" class="table table-hover table-bordered align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Service</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Doctors</th>
                            <th>Purchase Status</th>
                            <th>Paid By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var appt in Model)
                        {
                            <tr>
                                <td>@appt.ClientName</td>
                                <td>@appt.ContactNumber</td>
                                <td>@appt.Service</td>
                                <td>@appt.Date.ToString("g")</td>
                                <td>@appt.Status</td>
                                <td>@(string.IsNullOrEmpty(appt.Doctors) ? "Not Assigned" : appt.Doctors)</td>
                                <td>@appt.PurchaseStatus</td>
                                <td>@(string.IsNullOrEmpty(appt.PaidBy) ? "-" : appt.PaidBy)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@appt.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                                    <form asp-action="Delete" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@appt.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this booking?');">
                                            Delete
                                        </button>
                                    </form>


                                    @if (appt.PurchaseStatus == null || appt.PurchaseStatus == "Pending")
                                    {
                                        <a asp-controller="Payment" asp-action="Index" asp-route-id="@appt.Id" class="btn btn-success btn-sm ms-2">
                                            Pay
                                        </a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Back</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#bookingsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "pageLength": 5,
                "lengthMenu": [5, 10, 20, 50],
                "order": [[3, "desc"]] // Default: sort by Date
            });

            // 🔥 Custom Status Filter
            $('#statusFilter').on('change', function () {
                var selected = $(this).val();
                if (selected) {
                    // Match exact status (column index 4 = Status column)
                    table.column(4).search('^' + selected + '$', true, false).draw();
                } else {
                    // Reset filter
                    table.column(4).search('').draw();
                }
            });
        });
    </script>
}

}
