@model IEnumerable<UsersApp.ViewModels.UserWithRoleModels>

@{
    ViewData["Title"] = "Staff Page";
}

<h1>Welcome, Staff Member!</h1>
<p>Here are all registered users:</p>

<!-- Product Management Buttons -->
<div class="mb-3">
    <a asp-controller="Products" asp-action="Create" class="btn btn-success">
        + Add Product
    </a>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
        Manage Products
    </a>
    <a asp-controller="Booking" asp-action="AppointmentHistory" class="btn btn-info">
        Appointment History
    </a>
</div>


<table id="staffTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>User Name</th>
            <th>Role</th>
            <th>Profile Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <!-- Change Role Form -->
                    <form asp-controller="Home" asp-action="UpdateRole" method="post" class="d-flex align-items-center">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="role" class="form-select form-select-sm me-2">
                            <option value="User" selected="@(user.Role == "User")">User</option>
                            <option value="Staff" selected="@(user.Role == "Staff")">Staff</option>
                        </select>
                        
                    </form>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                    {
                        <img src="@user.ProfilePictureUrl" alt="Profile" width="50" height="50" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <!-- Edit -->
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>

                    <!-- Delete -->
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </button>
                        
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#staffTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "lengthMenu": [5, 10, 25, 50],
                "pageLength": 10
            });
        });
                $('#staffTable').DataTable({
            "ajax": "/Home/GetUsersJson",
            "columns": [
                { "data": "fullName" },
                { "data": "email" },
                { "data": "userName" },
                { "data": "role" },
                {
                    "data": "profilePictureUrl",
                    "render": function (data) {
                        return data ? `<img src="${data}" width="50" height="50"/>` : "No Image";
                    }
                },
                {
                    "data": "id",
                    "render": function (id) {
                        return `
                            <a href="/Home/EditUser/${id}" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/Home/DeleteUser/${id}" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                            </form>
                        `;
                    }
                }
            ]
        });

    </script>
}
        
        


    
        



