@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <section id="contact" class="contact-section">
        <div class="container">
            <h2 class="section-title">Get In Touch</h2>
            <p class="section-subtitle">We're here to help. Send us a message or give us a call to book your next appointment.</p>

            <div class="contact-grid">
                <div class="contact-info">
                    <h3>Contact Information</h3>
                    <p>Feel free to reach out to us through any of the following methods.</p>
                    <ul class="info-list">
                        <li><i class="fas fa-map-marker-alt"></i> 123 Dental St, Smile City</li>
                        <li><i class="fas fa-phone"></i> (123) 456-7890</li>
                        <li><i class="fas fa-envelope"></i> contact@dentalcare.com</li>
                    </ul>
                </div>


            </div>
        </div>
    </section>
</div>