@model IEnumerable<UsersApp.Models.Product>

<h2 class="text-center mb-4">Manage Products</h2>

<p class="text-center mb-3">
    <a asp-action="Create" class="btn btn-success me-2">+ Add Product</a>
    <a asp-controller="Home" asp-action="StaffPage" class="btn btn-secondary">Back</a>
</p>

<table class="table table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price (RM)</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>RM @item.Price.ToString("F2")</td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width:80px; height:80px; object-fit:cover;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
